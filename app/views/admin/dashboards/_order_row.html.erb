<div class="col-md-3 text-center">
  <div class="row">
    <h2 class="intro-text"><%= link_to "#{title.capitalize}", admin_orders_path(status: title), class: "text-muted" %> - <%= Order.locate(title) %></h2>
    <% array.each do |order| %>
      <div class="col-md-12">
        <div class="text-center">
          <p style="background-color:#FDFDFD"> <%= link_to "Order ##{order.id}", admin_order_path(order) %> -
           Total $<%= order.total %>
         </p>
        </div>
      </div>
  <% end %>
  </div>
</div>
