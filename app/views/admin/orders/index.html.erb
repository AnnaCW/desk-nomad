<div class="container-fluid">
  <div class="cart row">
    <div class="box">
      <div class="col-lg-12">
        <hr class="black-line">
        <h1 class="text-center"><%= @status.capitalize %>
          <h2 class="intro-text"><strong>
          <div class="col-md-3 text-center">
            <%= link_to "Ordered", admin_orders_path(status: "ordered"), class: "text-muted" %> - <%= Order.locate("ordered") %>
          </div>
          <div class="col-md-3 text-center">
            <%= link_to "Paid", admin_orders_path(status: "paid"), class: "text-muted" %> - <%= Order.locate("paid") %>
          </div>
          <div class="col-md-3 text-center">
            <%= link_to "cancelled", admin_orders_path(status: "cancelled"), class: "text-muted" %> - <%= Order.locate("cancelled") %>
          </div>
          <div class="col-md-3 text-center">
            <%= link_to "Completed", admin_orders_path(status: "completed"), class: "text-muted" %> - <%= Order.locate("completed") %>
          </div>
          <br>
        </strong></h2></h1>
        <hr class="black-line"><br>
        <div class="row">
          <% @orders.each do |order| %>
            <div class="col-md-3">
              <div class="text-center">
                <p style="background-color:#FDFDFD"> <%= link_to "Order ##{order.id}", admin_order_path(order) %> -
                 Total $<%= order.total %>
               </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
